{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2016",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
  },
  "include": ["src/**/*", "server.ts"],
  "exclude": ["node_modules", "dist"],
}
